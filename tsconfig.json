{
  "compilerOptions": {
      "lib": ["dom", "es2018"],
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": [
      "src/**/*"
  ]
}